# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                @controllers.ApplicationController.index
GET         /test1                           @controllers.ApplicationController.test1
GET         /test2                           @controllers.ApplicationController.test2
GET         /authenticate/:provider          @controllers.SocialAuthController.authenticate(provider)
POST        /api/v1/authenticate/:provider   @controllers.SocialAuthController.verifySocialAuth(provider)
POST        /api/v1/refreshToken             @controllers.SocialAuthController.refreshToken

# User API
POST        /api/v1/user/follow/:id          @controllers.FollowController.follow(id: String)
POST        /api/v1/user/unfollow/:id        @controllers.FollowController.unfollow(id: String)
GET         /api/v1/user/:id/followers       @controllers.UserController.getFollowers(id: String, skip: Int = 0, limit: Int = 20)
GET         /api/v1/user/:id/followings      @controllers.UserController.getFollowings(id: String, skip: Int = 0, limit: Int = 20)

# Post API
POST        /api/v1/post                     @controllers.PostController.createPost()
DELETE      /api/v1/post/:id                 @controllers.PostController.deletePost(id: String)
POST        /api/v1/post/:id/comment         @controllers.PostController.commentPost(id: String)
DELETE      /api/v1/post/:pid/comment/:cid   @controllers.PostController.deleteComment(pid: String, cid: String)
GET         /api/v1/post/random              @controllers.PostController.getOneRandomPost()


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                    controllers.Assets.at(path="/public", file)

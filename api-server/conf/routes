# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                @controllers.ApplicationController.index
GET         /test1                           @controllers.ApplicationController.test1
GET         /test2                           @controllers.ApplicationController.test2
GET         /authenticate/:provider          @controllers.SocialAuthController.authenticate(provider)
POST        /api/v1/authenticate/:provider   @controllers.SocialAuthController.verifySocialAuth(provider)
POST        /api/v1/refreshToken             @controllers.SocialAuthController.refreshToken

POST        /api/v1/post                     @controllers.PostController.createPost()
DELETE      /api/v1/post/:id                 @controllers.PostController.deletePost(id: String)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                    controllers.Assets.at(path="/public", file)
